{
  "name": "integrator",
  "description": "Predictable integration testing.",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc --pretty",
    "watch": "npm run clean && tsc --pretty --watch",
    "test": "npm run build && npm run specs && npm run lint",
    "lint": "find src -name '*.ts' | xargs tslint",
    "specs": "ava dist/**/*.test.js"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phuu/integrator.git"
  },
  "author": "Tom Ashworth <tgvashworth@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phuu/integrator/issues"
  },
  "homepage": "https://github.com/phuu/integrator",
  "devDependencies": {
    "ava": "^0.13.0",
    "ghooks": "^1.0.1",
    "tslint": "^3.6.0",
    "typescript": "^1.8.9",
    "typings": "^0.8.1"
  },
  "dependencies": {
    "lodash": "^4.6.1"
  }
}
